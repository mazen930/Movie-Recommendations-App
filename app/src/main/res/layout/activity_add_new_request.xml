<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.break2.AddNewRequest">

    <android.support.v7.widget.AppCompatImageView

        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/writer"
        android:translationX="-100dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/Requestbutton"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_marginBottom="284dp"
        android:layout_marginEnd="123dp"
        android:background="#B6FFBF10"
        android:fontFamily="sans-serif"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
        android:padding="10dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:onClick="AddRequestClick"
        android:text="@string/Requestbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/Moviename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="84dp"
        android:ems="10"
        android:hint="@string/Moviename"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/Requestbutton"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
