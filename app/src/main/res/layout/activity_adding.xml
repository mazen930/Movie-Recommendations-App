<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backs"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/addActorToMovieBtn"
                style="@android:style/Widget.Button"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="470dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="addmovieactor"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="ADD ACTOR TO MOVIE"
                android:textSize="12sp" />

            <Button
                android:id="@+id/addAward"
                style="@android:style/Widget.Button"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="324dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="addaward"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="ADD AWARD"
                android:textSize="12sp" />

            <Button
                android:id="@+id/giveAward"
                style="@android:style/Widget.Button"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="401dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="giveaward"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="GIVE AWARD"
                android:textSize="12sp" />

            <Button
                android:id="@+id/addAdminBtn"
                style="@android:style/Widget.Button"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="207dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="207dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="399dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="newAdminActive"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="ADD NEW ADMIN" />

            <Button
                android:id="@+id/addAdv"
                style="@android:style/Widget.Button"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="209dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="209dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="320dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="addAdvActive"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="ADD NEW ADV." />

            <Button
                android:id="@+id/addMovie"
                style="@android:style/Widget.Button"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="110dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="addMovieActive"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="ADD NEW MOVIE" />

            <Button
                android:id="@+id/addActor"
                style="@android:style/Widget.Button"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="109dp"
                android:background="#B6FFBF10"
                android:fontFamily="sans-serif"
                android:onClick="addActorActive"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:text="ADD NEW ACTOR" />

            <TextView
                android:id="@+id/headerAdd"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="50dp"
                android:text="ADDING NEW ITEMS"
                android:textColor="#B6FFBF10"
                android:textSize="30sp"
                android:typeface="normal"
                app:fontFamily="sans-serif-condensed" />

        </RelativeLayout>

        <Button
            android:id="@+id/addMovCin"
            style="@android:style/Widget.Button"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="250dp"
            android:background="#B6FFBF10"
            android:fontFamily="sans-serif"
            android:onClick="addMovieInCin"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="ADD MOVIE IN CIN."
            android:textSize="12sp" />

        <Button
            android:id="@+id/addAuth"
            style="@android:style/Widget.Button"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="176dp"
            android:background="#B6FFBF10"
            android:fontFamily="sans-serif"
            android:onClick="addAuthorActive"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="ADD NEW AUTHOR"
            android:textSize="12sp" />

        <Button
            android:id="@+id/addCin"
            style="@android:style/Widget.Button"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="247dp"
            android:background="#B6FFBF10"
            android:fontFamily="sans-serif"
            android:onClick="addCinemaActive"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="ADD CINEMA"
            android:textSize="12sp" />

        <Button
            android:id="@+id/addDir"
            style="@android:style/Widget.Button"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="177dp"
            android:background="#B6FFBF10"
            android:fontFamily="sans-serif"
            android:onClick="addDirectorActive"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="ADD NEW DIRECTOR"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>