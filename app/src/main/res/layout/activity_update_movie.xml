<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AlertDialog.AppCompat"


    tools:context=".AddMovie"

    >

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:padding="20sp"
        android:paddingTop="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/UpdateMovieSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/getmovieBtn"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"

                    android:background="#B6FFBF10"
                    android:onClick="GetMovieClick"
                    android:text="GET NOW"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/movieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"

                android:textSize="14sp" />


            <EditText
                android:id="@+id/movieLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Language"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/releaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Release date (yyyy/mm/dd)"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/movieDescription"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/ageRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Age restriction"
                android:inputType="number"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/movieUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="URL"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/reviewRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:hint="Reviewers` rating "
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/movieDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:hint="Duration (hh:mm:ss)"
                android:inputType="time"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textSize="14sp" />

            <Button
                android:id="@+id/updatemoviebtn"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:background="#B6FFBF10"
                android:onClick="UpdateMovieClick"
                android:text="UPDATE NOW"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />


        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>